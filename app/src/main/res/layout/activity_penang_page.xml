<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".penang_page"
    android:background="@drawable/loginbckgdpage">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="261dp"
        app:srcCompat="@drawable/penangpage" />

    <TextView
        android:id="@+id/penangtxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginTop="50px"
        android:fontFamily="@font/berkshire_swash"
        android:paddingBottom="50px"
        android:text="PENANG"
        android:textSize="120px" />

    <TextView
        android:id="@+id/penangtxt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:fontFamily="@font/delius_swash_caps"
        android:paddingBottom="50px"
        android:text="Penang, a state in Malaysia, offers a captivating blend of cultural diversity, historical significance, delicious cuisine, and natural beauty. Here are some reasons why you should consider visiting Penang:"
        android:textSize="50px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/pgfoodbtn"
            android:layout_width="210dp"
            android:layout_height="77dp"
            android:paddingLeft="40px"
            android:paddingRight="40px"
            android:clickable="true"
            android:onClick="clickImage"
            app:srcCompat="@drawable/penangfoodbtn" />

        <ImageView
            android:id="@+id/pgplacesbtn"
            android:layout_width="wrap_content"
            android:layout_height="77dp"
            android:layout_weight="1"
            android:paddingLeft="40px"
            android:paddingRight="40px"
            android:clickable="true"
            android:onClick="clickImage"
            app:srcCompat="@drawable/penangplacesbtn" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/pgsacbtn"
            android:layout_width="210dp"
            android:layout_height="77dp"
            android:clickable="true"
            android:onClick="clickImage"
            android:paddingLeft="40px"
            android:paddingRight="40px"
            app:srcCompat="@drawable/sacpenangbtn" />

        <ImageView
            android:id="@+id/pgfesbtn"
            android:layout_width="wrap_content"
            android:layout_height="77dp"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="clickImage"
            android:paddingLeft="40px"
            android:paddingRight="40px"
            app:srcCompat="@drawable/pgfesbtn" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="70px">

        <Button
            android:id="@+id/pgbackbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="100px"
            android:layout_marginRight="100px"
            android:text="Back" />

        <Button
            android:id="@+id/pghomebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="100px"
            android:layout_marginRight="100px"
            android:text="Home" />
    </LinearLayout>


</LinearLayout>