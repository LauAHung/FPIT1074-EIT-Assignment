<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/registerbtn"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Loginpage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/loginbckgdpage"
        android:orientation="vertical"
        tools:context=".signuppage">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="match_parent"
            android:layout_height="293dp"
            app:srcCompat="@drawable/login" />

        <TextView
            android:id="@+id/signuptxt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/berkshire_swash"
            android:paddingLeft="50px"
            android:text="Welcome~"
            android:textSize="100px" />

        <TextView
            android:id="@+id/signuptxt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/berkshire_swash"
            android:paddingLeft="50px"
            android:text="A New Way To Travel"
            android:textSize="100px" />

        <TextView
            android:id="@+id/signuptxt3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/delius_swash_caps"
            android:paddingLeft="55px"
            android:paddingTop="20px"
            android:paddingBottom="40px"
            android:text="Login To Continue" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="70px"
                android:paddingTop="30px"
                android:paddingRight="70px"
                app:startIconDrawable="@drawable/baseline_person_24">

                <EditText
                    android:id="@+id/edtemail_login_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="70px"
                android:paddingTop="30px"
                android:paddingRight="70px"
                app:startIconDrawable="@drawable/baseline_lock_24"
                app:endIconMode="password_toggle">

                <EditText
                    android:id="@+id/edtpass_login_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:inputType="textPassword"/>

            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:id="@+id/signuptxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/delius_swash_caps"
                android:paddingLeft="70px"
                android:paddingTop="20px"
                android:paddingRight="70px"
                android:text="Don't have an account yet? Create Now!"
                android:textColor="#083CA6" />

            <Button
                android:id="@+id/loginbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100px"
                android:insetLeft="250px"
                android:insetRight="250px"
                android:text="Sign In" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>