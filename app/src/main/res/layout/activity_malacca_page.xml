<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".malacca_page"
    android:background="@drawable/loginbckgdpage">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="261dp"
        app:srcCompat="@drawable/malaccapage" />

    <TextView
        android:id="@+id/malaccatxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginTop="50px"
        android:fontFamily="@font/berkshire_swash"
        android:paddingBottom="30px"
        android:text="MALACCA"
        android:textSize="120px" />

    <TextView
        android:id="@+id/malaccatxt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:fontFamily="@font/delius_swash_caps"
        android:paddingBottom="30px"
        android:text="Malacca, also known as Melaka, is a historic city located in Malaysia that offers a captivating blend of cultural heritage, colonial history, and charming architecture. Here are some compelling reasons why you should consider visiting Malacca:"
        android:textSize="50px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/malaccafoodbtn"
            android:layout_width="210dp"
            android:layout_height="77dp"
            android:paddingLeft="40px"
            android:paddingRight="40px"
            android:clickable="true"
            android:onClick="clickImage"
            app:srcCompat="@drawable/malaccafoodbtn" />

        <ImageView
            android:id="@+id/malaccaplacesbtn"
            android:layout_width="wrap_content"
            android:layout_height="77dp"
            android:layout_weight="1"
            android:paddingLeft="40px"
            android:paddingRight="40px"
            android:clickable="true"
            android:onClick="clickImage"
            app:srcCompat="@drawable/malaccaplacesbtn" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/malaccamngbtn"
            android:layout_width="210dp"
            android:layout_height="77dp"
            android:clickable="true"
            android:onClick="clickImage"
            android:paddingLeft="40px"
            android:paddingRight="40px"
            app:srcCompat="@drawable/malaccamngbtn" />

        <ImageView
            android:id="@+id/malaccafnebtn"
            android:layout_width="wrap_content"
            android:layout_height="77dp"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="clickImage"
            android:paddingLeft="40px"
            android:paddingRight="40px"
            app:srcCompat="@drawable/malaccafnebtn" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="70px">

        <Button
            android:id="@+id/mlcbackbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="100px"
            android:layout_marginRight="100px"
            android:text="Back" />

        <Button
            android:id="@+id/mlchomebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="100px"
            android:layout_marginRight="100px"
            android:text="Home" />
    </LinearLayout>


</LinearLayout>