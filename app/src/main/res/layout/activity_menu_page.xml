<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MenuPage"
    android:background="@drawable/loginbckgdpage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/Menutxt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginTop="50px"
                android:fontFamily="@font/berkshire_swash"
                android:paddingBottom="50px"
                android:text="Explore Now"
                android:textSize="150px" />

            <ImageView
                android:id="@+id/penangpic"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:clickable="true"
                android:onClick="clickImage"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                app:srcCompat="@drawable/penangmenu" />

            <ImageView
                android:id="@+id/sarawakpic"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:clickable="true"
                android:onClick="clickImage"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                app:srcCompat="@drawable/sarawakmenu" />

            <ImageView
                android:id="@+id/malaccapic"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:clickable="true"
                android:onClick="clickImage"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                app:srcCompat="@drawable/malaccamenu" />

            <ImageView
                android:id="@+id/klpic"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:clickable="true"
                android:onClick="clickImage"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                app:srcCompat="@drawable/klmenu" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>