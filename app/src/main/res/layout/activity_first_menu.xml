<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".first_menu"
    android:background="@drawable/loginbckgdpage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header Section -->
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="261dp"
                app:srcCompat="@drawable/fmenu" />

            <TextView
                android:id="@+id/welcomeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70px"
                android:fontFamily="@font/berkshire_swash"
                android:paddingTop="40px"
                android:paddingBottom="40px"
                android:text="Welcome, "
                android:textSize="80px"
                android:textStyle="bold" />

            <!-- Main Buttons -->
            <TextView
                android:id="@+id/txt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/berkshire_swash"
                android:paddingLeft="50dp"
                android:text="Let's Start"
                android:textSize="100px" />

            <TextView
                android:id="@+id/txt3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:fontFamily="@font/berkshire_swash"
                android:paddingLeft="50dp"
                android:paddingBottom="40px"
                android:text="your vacation!"
                android:textSize="100px" />

            <!-- Button Group 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/ebutton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp"
                    android:text="Explore Now"
                    app:icon="@drawable/baseline_travel_explore_24"
                    app:iconTint="#FFFFFF" />

                <Space
                    android:layout_width="10px"
                    android:layout_height="0dp" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Feedback"
                    app:icon="@drawable/baseline_feedback_24" />

            </LinearLayout>

            <!-- Button Group 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp"
                    android:text="Log Out"
                    app:icon="@drawable/baseline_logout_24"
                    app:iconTint="#FFFFFF" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="0dp" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Calendar"
                    app:icon="@drawable/baseline_calendar_month_24" />

            </LinearLayout>

            <!-- Popular Categories Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/berkshire_swash"
                    android:paddingLeft="50dp"
                    android:paddingTop="60dp"
                    android:text="Popular Categories"
                    android:textSize="100px" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="189dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    app:srcCompat="@drawable/fmenupg" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    app:srcCompat="@drawable/fmenukl" />

                <ImageView
                    android:id="@+id/imageView0"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    app:srcCompat="@drawable/fmenusrw" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>