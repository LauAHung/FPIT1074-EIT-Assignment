<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".kl_page"
    android:background="@drawable/loginbckgdpage">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="261dp"
        app:srcCompat="@drawable/klpage" />

    <TextView
        android:id="@+id/kltxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginTop="50px"
        android:fontFamily="@font/berkshire_swash"
        android:paddingBottom="30px"
        android:text="KUALA LUMPUR"
        android:textSize="100px" />

    <TextView
        android:id="@+id/KLtxt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:fontFamily="@font/delius_swash_caps"
        android:paddingBottom="30px"
        android:text="Kuala Lumpur, often referred to as KL, is the vibrant capital city of Malaysia, known for its modern skyline, diverse culture, and unique blend of tradition and modernity. Here are several reasons why you should consider visiting Kuala Lumpur:"
        android:textSize="50px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/klfoodbtn"
            android:layout_width="210dp"
            android:layout_height="77dp"
            android:paddingLeft="40px"
            android:paddingRight="40px"
            android:clickable="true"
            android:onClick="clickImage"
            app:srcCompat="@drawable/klfoodbtn" />

        <ImageView
            android:id="@+id/klplacesbtn"
            android:layout_width="wrap_content"
            android:layout_height="77dp"
            android:layout_weight="1"
            android:paddingLeft="40px"
            android:paddingRight="40px"
            android:clickable="true"
            android:onClick="clickImage"
            app:srcCompat="@drawable/klplacesbtn" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/klmibtn"
            android:layout_width="210dp"
            android:layout_height="77dp"
            android:clickable="true"
            android:onClick="clickImage"
            android:paddingLeft="40px"
            android:paddingRight="40px"
            app:srcCompat="@drawable/klmibtn" />

        <ImageView
            android:id="@+id/klsebtn"
            android:layout_width="wrap_content"
            android:layout_height="77dp"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="clickImage"
            android:paddingLeft="40px"
            android:paddingRight="40px"
            app:srcCompat="@drawable/klsebtn" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="70px">

        <Button
            android:id="@+id/srwbackbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="100px"
            android:layout_marginRight="100px"
            android:text="Back" />

        <Button
            android:id="@+id/srwhomebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="100px"
            android:layout_marginRight="100px"
            android:text="Home" />
    </LinearLayout>


</LinearLayout>